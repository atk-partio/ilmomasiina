// The "type" field of a question is used to react to different types data,
// whilst the ID field is used to link questions to other objects

// Question with name of enrollee
{
  "question": {
    "id": 1,
    "type": "text/name",
    "value": "Your name",
    "required": true
  }
}

// Question with email of enrollee
{
  "question": {
    "id": 2,
    "type": "text/email",
    "value": "Your E-mail address",
    "required": true
  }
}

// Question with phone number
{
  "question": {
    "id": 3,
    "type": "text/tel",
    "value": "Your phone number",
    "required": false // Optional, defaults to false
  }
}

// Question with boolean value
{
  "question": {
    "id": 4,
    "type": "boolean",
    "value": "I will bring a gift"
  }
}

// Question with multiple values, user doesn't have to select any
{
  "question": {
    "id": 5,
    "type": "select/many",
    "value": "What fruits do you like?",
    "required": false,
    "options": [
      {
        "id": 1,
        "value": "Apple"
      },
      {
        "id": 2,
        "value": "Lemon"
      },
      {
        "id": 3,
        "value": "Orange"
      },
      {
        "id": 4,
        "value": "Lime"
      },
      {
        "id": 5,
        "value": "Pineapple"
      }
    ]
  }
}

// Question with select one from multiple options, an answer is required
// and a default is set
{
  "question": {
    "id": 6,
    "type": "select/one",
    "value": "Your sex",
    "required": true,
    "default": 3,
    "options": [
      {
        "id": 1,
        "value": "Male"
      },
      {
        "id": 2,
        "value": "Female"
      },
      {
        "id": 3,
        "value": "I prefer not to tell",
      }
    ]
  }
}

// Question with a long text field / textarea
{
  "question": {
    "id": 7,
    "type": "text/long",
    "value": "Other questions or queries"
  }
}
