// Example event wihout any quotas
{
  "event": {
    "id": 1,
    "name": "Sukulaissitsit",
    "description": "Tervetuloa sukulaissitseille! ...",
    "image": "http://www.example.com/lolwut.jpg", // Optional
    "date": "2014-02-28T17:00+0300", // Time part can be left out
